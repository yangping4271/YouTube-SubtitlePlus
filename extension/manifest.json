{
  "manifest_version": 3,
  "name": "YouTube SubtitlePlus",
  "version": "1.0.1",
  "description": "Display local subtitle files on YouTube videos with bilingual support and real-time style customization",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:*/*",
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube SubtitlePlus"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "config.js",
        "subtitle-parser.js",
        "transcript-core.js",
        "content.js"
      ],
      "css": [
        "subtitle-overlay.css",
        "transcript-styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "inject.js"
      ],
      "world": "MAIN",
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}